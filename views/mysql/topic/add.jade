extends ../layout
block content
	artcle
		form(action='/topic' method='post')
			p 
				input(type='text' name='title' placeholder='title')
			p 
				textarea(name='description' placeholder='description')
			p
				select(name='author')
					-for (var i = 0; i < authors.length; i++)
						option(value="#{authors[i].id}") #{authors[i].name}
			p 
				input(type='submit')